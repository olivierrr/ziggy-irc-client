<div id="{{id}}">

	{{!-- subtabs --}}
	<span class="subTabs">
		{{#each subTabs}}
			<span class="subTab {{#if this.focus}}focus{{/if}}" settingsSubtab="{{this.name}}">
				{{this.name}}
			</span>
		{{/each}}
	</span>

	{{#each settings}}
		<div class="row">

			<span class="leftColumn"> 
				<span class="key">{{@key}}</span> 
			</span>

			<span class="rightColumn"> 
				<span class="input">
					<input type="text" placeholder="nick" setting="{{@key}}" value ="{{this}}">
				</span>
			</span>

		</div>
	{{/each}}

	{{#if settings}}
		<div class="row"> 
			<span class="save" settingsSave="{{id}}">save</span> 
		</div>
	{{/if}}

	{{#unless settings}}
		<div class="row">
			no settings.
		</div>
	{{/unless}}

</div>
	
<style>
#{{id}} .key {
	float: right;
	padding-right: 10px;
}
#{{id}} .input {
	float: left;
}
#{{id}} .leftColumn {
	float: left;
    width: 40%;
    line-height: 60px;
}
#{{id}} .rightColumn {
	float: right;
    width: 60%;
    line-height: 60px;
}

/*
	subTab
*/
#{{id}} .subTabs {
	display: inline-block;
	text-align: center;
	border: solid 1px #BDBDBD;
}
#{{id}} .subTab {
	border-left: solid 1px #BDBDBD;
	background-color: white;
	position: relative;
	float: left;
	color: #ABABAB;
	height: 40px;
	padding: 0 10px;
	line-height: 40px;
	cursor: pointer;
	font-size: 20px;
	font-weight: 400;
}
#{{id}} .subTab.focus {
	background-color: #EFEFEF;
	color: #929292;
}
#{{id}} .subTab.focus :hover{
	background-color: #DEDEDE;
}
#{{id}} .subTab:first-child {
	border-left: 0;
}
#{{id}} .subTab:hover {
	background-color: #F7F7F7;
}

/*
	containers
*/
#{{id}} {
	color: #616161;
	text-align: center;
	padding-top: 3%;
}
#{{id}} .row {
	margin: 20px;
	clear: both;
}

/*
	inputs
*/
#{{id}} input {
	font-size: 14px;
	color: #7D7D7D;
	background-color: white;
	border: solid 1px #DCDCDC;
	width: 100%;
	height: 60px;
	outline: none;
	padding: 0 20px;
}
#{{id}} input:focus{
	color: #6B6B6B;
}

/*
	save buttom
*/
#{{id}} .save {
	margin-top: 30px;
	font-size: 20px;
	color: white;
	line-height: 60px;
	display: inline-block;
	width: 400px;
	height: 60px;
	background-color: #B7B7B7;
	cursor: pointer;
}
#{{id}} .save:hover {
	background-color: #A7A7A7;
}

</style>